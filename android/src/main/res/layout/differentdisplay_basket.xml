<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Existing LinearLayout with TextViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <!-- TextView for Item Name -->
            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Item Name:"
                android:textStyle="bold" />

            <!-- TextView for Item Data -->
            <TextView
                android:id="@+id/Display_item_Name"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Cornbeef" />
        </LinearLayout>

        <!-- LinearLayout for Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal">

            <!-- TextView for Price -->
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Price: "
                android:textStyle="bold" />

            <!-- Placeholder for Price Data -->
            <TextView
                android:id="@+id/Display_item_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="$100" />
        </LinearLayout>

        <!-- LinearLayout for Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView for Description -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Description:"
                android:textStyle="bold" />

            <!-- Placeholder for Description Data -->
            <TextView
                android:id="@+id/Display_item_Desc"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:paddingStart="20dp"
                android:text="Corn and beef" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>